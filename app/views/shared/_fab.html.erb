<div data-controller="fab" class="fixed bottom-6 right-6 flex flex-col items-end">
  <div class="flex flex-col items-end transition-all overflow-hidden max-h-0 opacity-0" data-fab-target="newItemsButtons" data-action="click@window->fab#collapseIfOutsideClick">
    <div class="flex items-center mb-3 group">
      <span class="mr-3 md:group-hover:font-medium">New list</span>
      <div class="bg-blue-700 md:group-hover:bg-blue-800 rounded-full w-16 h-16 flex justify-center items-center">
        <span class="text-2xl text-white font-bold"><i class="fa-solid fa-list-check"></i></span>
      </div>  
    </div>
    <%= link_to new_note_path do %>
      <div class="flex items-center mb-3 group">
        <span class="mr-3 md:group-hover:font-medium">New note</span>
        <div class="bg-blue-700 md:group-hover:bg-blue-800 rounded-full w-16 h-16 flex justify-center items-center">
          <span class="text-2xl text-white font-bold"><i class="fa-solid fa-file-lines"></i></span>
        </div>  
      </div>
    <% end %>
  </div>
  <div class="flex justify-center items-center text-3xl font-semibold text-white bg-blue-700 shadow-lg shadow-gray-400 rounded-full w-16 h-16 transition-all cursor-pointer select-none" id="fab" data-fab-target="addButton" data-action="click->fab#toggle">
    <i class="fa-solid fa-plus"></i>
  </div>
</div>