<h1 class="font-bold text-4xl mb-4">Easy List</h1>

<%= turbo_frame_tag "lists", src: lists_path, loading: 'lazy', target: '_top' do %>
  <i class="fas fa-spinner fa-spin fa-2xl"></i>
  <span>Loading lists...</span>
<% end %>

<%= turbo_frame_tag "items" %>

<% if false %>
  <h2 class="font-bold text-2xl mb-3">My first list <span id="items_count" class="text-sm bg-blue-300 p-1 rounded-md"><%= @items.not_done.count %></span></h2>

  <%= render 'items/add_item_button' %>

  <%= turbo_frame_tag "items", src: items_path, loading: 'lazy' do %>
    <i class="fas fa-spinner fa-spin fa-2xl"></i>
    <span>Loading list...</span>
  <% end %>
<% end %>