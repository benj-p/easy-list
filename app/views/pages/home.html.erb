<div class="py-24">
  <h1 class="text-4xl font-bold text-white text-center mb-4">EasyList</h1>
  <p class="text-white text-center">All your lists and notes in one place</p>
</div>

<% resource_class.omniauth_providers.each do |provider| %>
  <% break unless provider == :google_oauth2 %>
  <%= link_to omniauth_authorize_path(resource_name, provider), method: :post do %>
    <div class="mx-auto bg-gray-200 h-12 max-w-sm	rounded-md flex items-center justify-center">
      <%= image_tag 'google/g_logo.png', class: 'h-3/4 mr-3' %>
      <span class="font-medium">Sign in with Google</span>
    </div>
  <% end %>
<% end %>

<div class="max-w-sm my-3 mx-auto flex items-center before:content-[''] before:flex-1 before:border-b before:mr-3 after:content-[''] after:flex-1 after:border-b after:ml-3 text-white">Or</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mx-auto max-w-sm' }) do |f| %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'w-full rounded-md mb-2' %>
  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'w-full rounded-md' %>

  <% if false && devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= f.submit "Sign in", class: 'w-full rounded-md bg-lemon-meringue h-12 mt-6 font-medium' %>
<% end %>

<div class="text-center text-white mt-4">Don't have an account? <%= link_to 'Sign up here', new_user_registration_path, class: 'text-lemon-meringue font-semibold' %></div>